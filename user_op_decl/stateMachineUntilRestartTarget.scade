node stateMachineUntilRestartTarget(ival1 : int8; ival2 : int8) returns (ival3 : int8)
let
  automaton myStateMachine
    initial state State1
      let
        ival3= ival2;
      tel
      until
        if true restart State2;

    state State2
      let
        ival3= ival1;
      tel
  returns ..;
